# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe Configuration (Optional - for payment processing)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_CLIENT_ID=ca_your_stripe_connect_client_id

# Application Configuration
VITE_APP_NAME=Ad Management Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# File Upload Limits (in bytes)
VITE_MAX_IMAGE_SIZE=10485760  # 10MB
VITE_MAX_VIDEO_SIZE=524288000 # 500MB
VITE_MAX_VIDEO_DURATION=15    # 15 seconds

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_TRACKING_ID=your-analytics-id

# AWS S3 Configuration
VITE_AWS_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your-aws-access-key-id
VITE_AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
VITE_AWS_S3_BUCKET_NAME=your-s3-bucket-name
VITE_AWS_S3_PREFIX=reports/

# Feature Flags
VITE_ENABLE_STRIPE_PAYMENTS=true
VITE_ENABLE_CREATIVE_MARKETPLACE=true
VITE_ENABLE_COUPON_CODES=true
VITE_ENABLE_REAL_TIME_ANALYTICS=true
VITE_ENABLE_MAILCHIMP=true

# Gmail Integration (App/Frontend)
# If provided, the app will use these instead of loading from database
VITE_GMAIL_CLIENT_ID=
VITE_GMAIL_CLIENT_SECRET=
VITE_GMAIL_REFRESH_TOKEN=
VITE_GMAIL_SENDER_EMAIL=
VITE_GMAIL_SENDER_NAME=EZ Kiosk Ads

# Gmail Integration (Edge Functions)
# Add these as secrets in Supabase for edge functions:
# supabase secrets set GMAIL_CLIENT_ID=... GMAIL_CLIENT_SECRET=... GMAIL_REFRESH_TOKEN=...
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_SENDER_EMAIL=
GMAIL_SENDER_NAME=EZ Kiosk Ads

# Mailchimp Integration (App + Edge Functions)
# Frontend may use the flag; DO NOT expose secrets in Vite vars
# Add these as secrets in Supabase for edge functions:
# supabase secrets set MAILCHIMP_API_KEY=... MAILCHIMP_SERVER_PREFIX=usXX MAILCHIMP_AUDIENCE_ID=...
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=
MAILCHIMP_AUDIENCE_ID=

